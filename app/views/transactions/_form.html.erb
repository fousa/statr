<%= form_for transaction do |f|%>
  <% if transaction.errors.any? %>
    <ul>
      <% transaction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>  

  <p><%= f.label :executed_at %><br />
  <%= f.text_field :executed_at %></p>

  <p><%= f.label :amount %><br />
<%= f.text_field :amount, :precision => 2, :delimiter => "" %></p>

  <p><%= f.label :category_id %><br />
  <%= f.select :category_id, Category.options_for_select, { :include_blank => true } %></p>

  <p><%= f.label :description %><br />
  <%= f.text_area :description %></p>

  <p><%= f.submit %></p>
<% end -%>
